<li id="<%= feed_item.id %>">
	<%= link_to gravatar_for(feed_item.user), feed_item.user %>
		<span class="user">
			<%= link_to feed_item.user.name, feed_item.user %>
		</span>
		<span class="content"><%= feed_item.content %></span>
		<span class="timestamp">
			Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
		</span>
	<% if current_user?(feed_item.user) %>
		<%= link_to "delete", feed_item, method: :delete,
										data: { confirm: "You sure?" },
										title: feed_item.content %>
	<% end %>


	<% if feed_item.content == 'stop' %>
		<% @timer.each do |timer| %>
			<% if timer.user == feed_item.user && timer.content == 'start' %>
				<% time = feed_item.created_at.to_formatted_s(:number).to_i - timer.created_at.to_formatted_s(:number).to_i %>
					<% if time > 0 %>
						<% stop = feed_item.created_at.strftime('%H').to_f * 60 + feed_item.created_at.strftime('%M').to_f %>
						<% start = timer.created_at.strftime('%H').to_f * 60 + timer.created_at.strftime('%M').to_f %>
						<%= ((stop - start) / 60).round(2) %>
					<% end %>
				<% break %>
			<% end %>
		<% end %>
	<% end %>
</li>